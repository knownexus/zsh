# -*- sh -*-

# Configure ls as I like it.

alias l='ls -CF'
alias ll='ls -l'
alias la='ls -a'
alias lla='la -l'

# Look for colours...

DCFILE=$RESDIR/settings/ls/dircolors
DCEXEC=$(which dircolors)

if [ "x$DCEXEC" = "x" ]; then
 # No dircolors
 alias ls=$(which ls)
else
 alias ls='ls --color=auto'
 eval $($DCEXEC $DCFILE)
fi

unset DCEXEC DCFILE
